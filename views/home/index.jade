extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Twilio Text Message Maker
      .row
        .small-4.columns
          input#to(type= "text", autofocus = true, placeholder= "Recipient phone number +1XXXYYYZZZZ")
      .row
        textarea#message(type= "text", placeholder= "Type message here")
      .row
        .small-2.columns
          input#text.button.radius(type= "button", value="Send Text")
        .small-2.columns
          input#call.button.radius(type= "button", value="Send Call")
        .small-8.columns
      .row
        .small-12.columns
          input#send.button.radius.success(type= "button", value="Send")


